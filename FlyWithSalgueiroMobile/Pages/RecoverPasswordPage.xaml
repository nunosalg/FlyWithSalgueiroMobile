<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyWithSalgueiroMobile.Pages.RecoverPasswordPage"
             Title="Recover Password Page"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Background}">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*"
       RowSpacing="20"
       Margin="20,150,20,40">

        <Image Grid.Row="0"
            Source="fwslogo.png"
            Aspect="AspectFit"
            HeightRequest="100"
            WidthRequest="100" />

        <Label Grid.Row="1"
            Text="Recover Password"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Frame Grid.Row="2"
            Padding="15">

            <VerticalStackLayout>
                <Entry Placeholder="Email"
                       Keyboard="Email"
                       x:Name="EntEmail" />
            </VerticalStackLayout>
        </Frame>

        <Button Grid.Row="3"
             Text="Recover"
             FontSize="Medium"
             x:Name="BtnRecoverPassword" 
             BackgroundColor="{StaticResource ButtonPrimary}"
             Clicked="BtnRecoverPassword_Clicked"/>

        <ActivityIndicator Grid.Row="4" 
                   x:Name="LoadingIndicator"
                   HorizontalOptions="Center"
                   IsVisible="False" 
                   IsRunning="{Binding IsVisible, Source={x:Reference LoadingIndicator}}" />

        <HorizontalStackLayout Grid.Row="5"
                            Spacing="2"
                            HorizontalOptions="Center"
                            VerticalOptions="EndAndExpand">
            <Label Text="Go back to login ? " />
            <Label Text="Click here" TextColor="{StaticResource ButtonPrimary}" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapBackToLogin"
                               Tapped="TapBackToLogin_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>